{
    "index_patterns": "mc_search-*",
    "template": {
      "settings": {
        "index.lifecycle.name": "mediacloud-lifecycle-policy",
        "index.lifecycle.rollover_alias": "mc_search"
      },
      "mappings": {
        "dynamic": "false",
        "properties": {
            "article_title": {
                "type": "text"
            },
            "canonical_domain": {
                "type": "keyword"
            },
            "indexed_date": {
                "type": "date_nanos"
            },
            "language": {
                "type": "keyword"
            },
            "publication_date": {
                "type": "date",
                "ignore_malformed": true
            },
            "text_content": {
                "type": "text"
            },
            "url": {
                "type": "wildcard"
            }
        }
      }
    }
  }
